@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{ Layout = "childPageLayout.cshtml";
    Html.RequiresCss("~/css/pages/common-content.css", 2); }

@* the fun starts here *@

<div class="common-content @Model.Name.ToLower().Replace(" ","-")">
    <div class="container ">
        <div class="row clearfix">
            <div class="content">
                @if (Model.HasValue("textContent"))
                {
                    @Html.Raw(Model.Value("textContent").ToString())
                }

            </div>
        </div>

    </div>
</div>